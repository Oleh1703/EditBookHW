@model Book

<h2>Do you want to delete this book?</h2>
<p>@Model.Name</p>
<p>@Model.Author.Name</p>
<p>@Model.Price</p>
<p>@Model.CountPage</p>

<form method="post">
	<input type="hidden" asp-for="Id"/>
	<a asp-action="GetBooks">Cancel</a>
	<input class="btn btn-danger" type="submit" value="Delete"/>
</form>